# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/telegram_platform

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=telegram-platform

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=your_bot_username

# Telegram MTProto (for scraping - get from https://my.telegram.org)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# AI (OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=google/gemini-2.0-flash-001
IMAGE_GENERATION_MODEL=google/gemini-2.0-flash-exp:free

# Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars

# App URLs
NEXT_PUBLIC_USER_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_APP_URL=http://localhost:3001

# Node environment
NODE_ENV=development
